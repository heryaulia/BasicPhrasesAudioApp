<?xml version="1.0" encoding="utf-8"?>
<androidx.gridlayout.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="klik"
        android:tag="welcome"
        android:text="Welcome"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_gravity="fill"
        android:layout_margin="10dp"
        app:layout_row="0"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/nicetomeetyou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="klik"
        android:tag="nicetomeetyou"
        android:text="Nice to meet you"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_gravity="fill"
        android:layout_margin="10dp"
        app:layout_row="0"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/howareyou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="klik"
        android:tag="ilivein"
        android:text="how are you"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_gravity="fill"
        android:layout_margin="10dp"
        app:layout_row="2"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/iamfine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="klik"
        android:tag="iamfine"
        android:text="iam fine"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_gravity="fill"
        android:layout_margin="10dp"
        app:layout_row="2"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/ihateyou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="klik"
        android:tag="ihateyou"
        android:text="i hate you"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_gravity="fill"
        android:layout_margin="10dp"
        app:layout_row="3"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/iloveyou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="klik"
        android:tag="iloveyou"
        android:text="i love you"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_gravity="fill"
        android:layout_margin="10dp"
        app:layout_row="3"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/mynameis"
        android:layout_width="wrap_content"
        android:onClick="klik"
        android:tag="mynameis"
        android:text="my name is"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_gravity="fill"
        android:layout_margin="10dp"
        app:layout_row="1"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/goodby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="klik"
        android:tag="goodby"
        android:text="good by"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_gravity="fill"
        android:layout_margin="10dp"
        app:layout_row="1"
        app:layout_rowWeight="1" />
    </androidx.gridlayout.widget.GridLayout>
